<web-app id="simple" version="2.4">
    <!-- Welcome Page -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!-- Debugging -->
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>ProjectHeraBackend.TestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <!-- User Registration -->
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>ProjectHeraBackend.SignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogInServlet</servlet-name>
        <servlet-class>ProjectHeraBackend.LogInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogInServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>ProjectHeraBackend.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <!-- API -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>ProjectHeraBackend.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>ProjectHeraBackend.CategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/categories/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>QuestServlet</servlet-name>
        <servlet-class>ProjectHeraBackend.QuestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QuestServlet</servlet-name>
        <url-pattern>/quests/*</url-pattern>
    </servlet-mapping>
</web-app>